# ==============================================================================
# GenAI-RAG-EEG Environment Variables
# ==============================================================================
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
#
# ==============================================================================

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key (Required for RAG explanation generation)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Hugging Face Token (Optional, for private models)
# Get yours at: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# Weights & Biases API Key (Optional, for experiment tracking)
# Get yours at: https://wandb.ai/authorize
WANDB_API_KEY=your-wandb-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Vector Database Path
VECTOR_DB_PATH=./data/vectordb

# SQLite Database for Results (Optional)
DATABASE_URL=sqlite:///./results.db

# Redis Cache (Optional, for production caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default Model Device
# Options: auto, cuda, cuda:0, cuda:1, cpu, mps
DEVICE=auto

# Model Checkpoint Path
MODEL_CHECKPOINT_PATH=./models/checkpoints

# Pretrained Model Cache Directory
TRANSFORMERS_CACHE=./.cache/huggingface

# =============================================================================
# DATA PATHS
# =============================================================================

# Dataset Directories
DEAP_DATA_PATH=./data/deap
SAM40_DATA_PATH=./data/sam40
WESAD_DATA_PATH=./data/wesad

# Processed Data Directory
PROCESSED_DATA_PATH=./data/processed

# Knowledge Base for RAG
KNOWLEDGE_BASE_PATH=./data/knowledge

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=./logs

# Enable/Disable TensorBoard
TENSORBOARD_ENABLED=true
TENSORBOARD_LOG_DIR=./logs/tensorboard

# =============================================================================
# WEB APPLICATION (Optional)
# =============================================================================

# Flask/Streamlit Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# Secret Key for Flask Sessions
FLASK_SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# EXPERIMENT TRACKING (Optional)
# =============================================================================

# Weights & Biases
WANDB_PROJECT=genai-rag-eeg
WANDB_ENTITY=your-username

# MLflow (Alternative tracking)
MLFLOW_TRACKING_URI=./mlruns

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of DataLoader Workers
NUM_WORKERS=4

# Enable CUDA Benchmark Mode
CUDA_BENCHMARK=true

# Mixed Precision Training
USE_AMP=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Random Seed for Reproducibility
RANDOM_SEED=42

# Debug Mode
DEBUG=false

# Verbose Output
VERBOSE=false
